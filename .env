# Sports Official Scheduler - Environment Configuration
# Copy this file to .env and update with your values

# Application settings
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-also
HOST=0.0.0.0
PORT=5000

# Database configuration
# For development (SQLite)
DATABASE_URL=sqlite:///scheduler.db

# For production (PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/scheduler_db

# CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Session settings
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# JWT settings
JWT_ACCESS_TOKEN_EXPIRES=3600

# File storage
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Feature flags
ENABLE_REAL_TIME_UPDATES=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_FILE_UPLOADS=true
ENABLE_API_RATE_LIMITING=false
ENABLE_ACTIVITY_LOGGING=true

# Development settings
SEED_DATABASE=false
CREATE_SAMPLE_DATA=false
SQLALCHEMY_ECHO=false

# Backup settings
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=backups/
